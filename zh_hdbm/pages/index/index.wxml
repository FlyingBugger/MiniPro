<view class="index font">
  <view class="index_content">
    <view class="flex">

      <view class="content_dizhiimg1 flex">
        <view>{{city}}</view>
        <view class="content_dizhiimg3">
          <image src="../images/xiala.png"></image>
        </view>
      </view>

       <!-- <view class="content_dizhiimg2 flex" bindtap="saoma">
        <view>
          <image src="../images/shaoma@2x.png"></image>
        </view>
         <view class="content_dizhiimg3 content_dizhiimg4" bindtap='yan'>扫码</view> 
      </view>  -->

    </view>

    <view class="content_dizhi1">
      <image src="../images/sousuo@2x.png"></image>
      <input bindblur="bindblur" type="text" class="content_inp" bindinput="sousuo" placeholder="搜索" />
    </view>
    <view class="classname">
      <view class="classname" hidden="{{hidden}}" wx:key="{{item.value}}" bindtap="infoYemian1" wx:for="{{sousuo}}" data-id="{{index}}" wx:for-index="index" wx:key="id">{{name}}</view>
    </view>
  </view>
  <!--轮播图  -->
  <view class="header rel">
    <view class="header_img ab">
      <view class="swiper-container">
        <swiper autoplay="true" interval="5000" indicator-color="#fff" indicator-active-color="#43B1FF" indicator-dots="true" duration="500" circular="true" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
          <block wx:for="{{slider}}" wx:key="unique">
            <swiper-item>
              <image mode="aspectFill" src="{{url}}{{item.logo}}" class="img"></image>
            </swiper-item>
          </block>
        </swiper>

        <!-- <view class="dots">
          <block wx:for="{{slider}}" wx:key="unique">
            <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
          </block>
        </view> -->
      </view>
    </view>
  </view>
  <view class="address">

  </view>
  <view class="total">
    <view class="toatal_head"></view>
  </view>
  <view class="details"></view>

  <!-- ——————————————首页分类———————————————— -->
  <swiper class="swiper-box" style='height:{{hei}}rpx' circular="true" duration="300" bindchange="bindChange">
    <swiper-item class="handover" wx:for="{{navs}}" wx:key="{{item.value}}">
      <view class="classification al">
        <block wx:for="{{item}}" wx:key="{{item.value}}">
          <view class="child_element" data-flid="{{index}}" data-id="{{item.id}}" data-name="{{item.type_name}}" bindtap="tzfl">
            <view class="slide_icon">
              <image class="img" src="{{url}}{{item.icon}}"></image>
            </view>
            <view class="slide_icon_text">{{item.type_name}}</view>
          </view>
        </block>
      </view>
    </swiper-item>
  </swiper>
  <!--——————————————推荐板块开始——————————  -->
  <view class="tuijian">
    <view class="tuijian_title">最新发布</view> 
    <view class="tuijian_title1" wx:for="{{list}}" wx:key="{{item.value}}">
      <view bindtap="infoYemian" class="tuijian_banner" data-id="{{index}}" wx:for-index="index" wx:key="id">
        <view>
          <image class="tuijian_img" src="{{url}}{{item.logo}}"></image>
        </view>
        <view class="tuijian_title3">
          <view class="tuijian_title2">
            <view class="rich_one">
              <text>{{item.name}}</text>
              <!-- <text wx:if="{{item.hours<0&&item.days==0}}">{{item.hours}}小时后开始</text>
                <text wx:if="{{item.hours>0&&item.days==0}}">{{item.hours}}小时前已经结束</text> -->
            </view>
            <view wx:if="{{item.is_close==1}}">
              <view class='activity' wx:if="{{item.ren==0&&item.activity!=4}}">{{item.ac}}</view>
              <view class='activity' style='background:#ccc;' wx:if="{{item.ren==0&&item.activity==4}}">{{item.ac}}</view>
              <view class='activity' wx:if="{{item.ren==1}}">报名人数已满</view>
            </view>
            <view wx:if="{{item.is_close==2}}">
              <view class='activity' style='background:#ccc;'>活动已关闭</view>
            </view>
          </view>
          <view class="tuijian_title4">
            <view class="tuijian_img4">
              <view>
                <image class="tuijian_img1" src="../images/riqi@2x.png"></image>
                <!-- <text class="tuijian_img2" wx:if="{{item.hours<=0&&item.day==0}}">进行中</text>
                 <text class="tuijian_img2" wx:if="{{item.hours<=0&&item.day<0}}">已结束</text> -->
              <text class="tuijian_img2" wx:if="{{item.again!='已经结束'}}">{{item.again}}
               </text>
                <text class="tuijian_img2" wx:if="{{item.again=='已经结束'}}">{{item.again}}</text> 
              </view>
              <view class="tuijian_img3">
                <image class="tuijian_img1" src="../images/didian@2x.png"></image>
                <text>{{item.city}}</text>
              </view>
            </view>
            <view class="flex1">
              <view>
                <image class="tuijian_img1" src="../images/xianshang@2x.png"></image>
                <text class="tuijian_img2" wx:if="{{item.activity_type==1}}">线上活动</text>
                <text class="tuijian_img2" wx:if="{{item.activity_type==2}}">线下活动</text>
              </view>
              <view class="tuijian_jiage" wx:if="{{item.cost>0}}">¥{{item.cost}}</view>
              <view class="tuijian_jiage" wx:if="{{item.cost<=0}}">免费</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!--__________________推荐板块结束  -->

  <!--__________________尾部  -->
  <view class="footer">
    <view class="footer1">
      <!-- <image src="../images/zhihui@2x.png" class="footer_img"></image>  -->
      <text class="footer_text1">{{copyright.copyright}}</text>
    </view>
  </view>
</view>
