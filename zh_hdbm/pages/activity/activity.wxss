
/*分类  */

.swiper-box {
  height: 420rpx;
  /* min-height: 210rpx;
  max-height: 420rpx; */
  background: #fff;
}

.swiper_tab {
  width: 100%;
  height: 40rpx;
  background: #fff;
}

.swiper-tab {
  width: 40rpx;
  margin: 0 auto 0;
  display: flex;
  background: #fff;
}

.swiper-tab view:nth-child(2) {
  margin-left: 10rpx;
}

.swiper-tab-list {
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  flex: 2;
  background: #efeff4;
  border-radius: 50%;
}

.on {
  background: #67d5b5;
}

.classification {
  width: 100%;
  height: 190rpx;
}

.child_element {
  width: 25%;
  height: 180rpx;
  float: left;
  box-sizing: border-box;
}

.classification>view view:nth-child(1) {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 30rpx auto 20rpx;
  background: orange;
}

.classification>view view:nth-child(1) image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.classification>view view:nth-child(2) {
  text-align: center;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  color: #666;
}
