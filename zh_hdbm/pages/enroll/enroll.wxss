/*推荐板块  */
.bath{
  width: 300rpx;
  height: 300rpx;
  background: orange;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.bath image{
  width: 100%;
}
.info{
  width: 640rpx;
  padding: 20rpx;
  height: 150rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
}
.logo{
  width: 200rpx;
  height: 150rpx;
  float: left; 
  position: relative;
  overflow: hidden;
}
.logo image{
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.ac_info{
  width: 390rpx;
  height: 150rpx;
  float: left;
  margin-left: 20rpx;
}
.ac_info>view text{
  width: 50%;
  height: 100%;
  display: inline-block;
  text-align: left;
}
.ac_info>view{
  overflow: hidden;
}
.ac_info>view:nth-child(1){
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
.ac_info>view:nth-child(2){
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.ac_info>view:nth-child(3){
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.ac_info>view:nth-child(4){
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.co{
  background: #41B0FF;
  color: #fff;
}
