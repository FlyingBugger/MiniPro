/* zh_hdbm/pages/admin/admin.wxss */
.admin{
  background-color: white;
  display: flex;
  height: 100rpx;
  border-top: 1rpx solid #E5E5E5;
  color: #999;
  padding: 30rpx 0rpx;
}
.list_one{
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #E5E5E5;
}

.top{
  font-size: 30rpx;
}
.bottom{
  margin-top: 10rpx;
  font-size: 24rpx;
}
.edit{
  background-color: white;
  display: flex;  
  border-bottom: 1rpx solid #E5E5E5;
  color: #999;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.edit_img{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.edit_one{
  width: 33%;
  height: 160rpx;
  display: flex;
  border-top: 1rpx solid #E5E5E5;
  border-right: 1rpx solid #E5E5E5;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
  position: relative;
}
.edit_one button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: none;
  z-index: 99;
}
.edit_one button::after{
  border: none;
}
.hexiao{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  margin-top: 20rpx;
}
.hexiao_left{
  width: 50%;
  height: 80rpx;
  border-right: 1rpx solid #E5E5E5;
}
.hexiao_right{
  width: 50%;
  height: 80rpx;  
}