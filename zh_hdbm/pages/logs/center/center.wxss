  background-color: white;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #E5E5E5;
  border-top: 1rpx solid #E5E5E5;
}
.tuijian_title{
  height: 90rpx;
  font-size: 34rpx;
  color: #333;
  padding-left: 30rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.flex1{
  width: 400rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tuijian_img{
  width: 234rpx;
  height: 150rpx;
  border-radius: 8rpx;
}
.tuijian_banner{
  width: 100%;
  padding: 20rpx 0rpx;
  display: flex;
}
.tuijian_title2{
  font-size: 30rpx;
  color: #333;
}
.tuijian_title3{
  margin-left: 20rpx;
  display: flex;
