/* zh_hdbm/pages/center/center.wxss */
.part_header{
  padding: 50rpx 30rpx 30rpx;
  background-color: #41B0FF;
  color: white;
  font-size: 24rpx;
}
.center_select{
  display: flex;
  position: relative;
  background-color: white;
  border-bottom: 1rpx solid #E5E5E5;
  color: #333;
  height: 80rpx;
}
.centeron{
  color: #41B0FF;
}
.weui-navbar__slider{
  position: absolute;
  background-color: #0396ff;
  width:50%;
}
.weui-navbar__item{
  padding: 13rpx 0rpx;
}
.part_header_img{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.part_header_name{
  font-size: 36rpx;
}
.part_header_tou{
  width: 130rpx;
  height: 130rpx;
  background-color: pink;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.part_header_bot{
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.part_header_left{
  width: 50%;
  text-align: right;
  padding-right: 15rpx;
}
.part_header_right{
  width: 50%;
  text-align: left;
  padding-left: 15rpx;
}
.part_header_margin{
  margin-right: 30rpx;
}
.part_header_text{
  font-size: 34rpx;
  margin-right: 10rpx;
}
.part_header_jie{
  font-size: 24rpx;
  text-align: center;
  height: 29rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 25rpx;
}
.section{
  margin-top: 10rpx;
}
.section_title{
  font-size: 28rpx;
  border-left: 5rpx solid #41B0FF;
  padding-left: 30rpx;
}
.section_kong{
  font-size: 32rpx;
  color: #999;
  text-align: center;
  margin-top: 50rpx;
}
/*————————推荐板块  */
